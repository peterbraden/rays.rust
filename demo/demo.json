    "POLISHED_STEEL": {
      "type": "metal",
      "reflective": [0.77, 0.78, 0.78],
      "roughness": 0.1
    },
    "BRUSHED_METAL_RED": {
      "type": "metal",
      "reflective": [0.8, 0.1, 0.1],
