{
  "width": 1200,
  "height": 500,

  "supersamples": 100,
  "chunk_size": 64,
  "samples_per_chunk": 1,
  
  "background": [0.1, 0.1, 0.1],
  "shadow_bias": 0.000001,
  "max_depth": 3,

  "materials": {
    "TEST": {
      "type": "normal"
    },
    "RED": {
      "type": "flat",
      "color": [1,0,0]
